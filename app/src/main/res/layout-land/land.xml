<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="7"
    android:columnCount="7"
    >

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_rowSpan="2"
        android:layout_columnSpan="7"
        android:hint="Input Number"
        />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_rowSpan="2"
        android:layout_columnSpan="1"
        android:text="AC"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button_left"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="("
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/button_sin"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="sin"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button_sum"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="+"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button_sub"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="-"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button_mult"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="×"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button_div"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="÷"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/button_right"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text=")"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button_cos"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="cos"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_PI"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="Π"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button_yu"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="/"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/button_baifen"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="%"
        android:textSize="20dp"
        />


    <Button
        android:id="@+id/button_del"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="⬅"
        android:textSize="20dp"
        />


    <Button
        android:id="@+id/button_jiecheng"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="x!"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button_doshu"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="1/x"
        android:textSize="20dp"
        />


    <Button
        android:id="@+id/button_tan"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="tan"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/button7"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="7"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button8"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="8"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button9"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="9"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button0"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="0"
        android:textSize="20dp"
        />


    <Button
        android:id="@+id/button_pingfang"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="x²"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button_sancifang"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="x³"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button_genhao"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="√x"
        android:textSize="20dp"
        />



    <Button
        android:id="@+id/button4"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="4"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="5"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button6"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="6"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button_result"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_rowSpan="2"
        android:layout_columnSpan="1"
        android:text="="
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/button_ln"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="ln"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button_log"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="log"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button_point"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="."
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="2"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:text="3"
        android:textSize="20dp"
        />


</GridLayout>